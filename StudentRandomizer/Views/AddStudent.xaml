<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentRandomizer.Views.AddStudent"
             Title="AddStudent">

    <ContentPage.Resources>
        <StyleSheet Source="../Styles/AddStudent.css" />
    </ContentPage.Resources>

    <VerticalStackLayout StyleClass="add-student-page">
        <Editor x:Name="StudentName"
                StyleClass="student-input-editor"
                MaxLength="30"
                Placeholder="Enter your student name" />

        <Editor x:Name="StudentSurname"
                StyleClass="student-input-editor"
                MaxLength="30"
                Placeholder="Enter your student surname" />

        <Button Text="Save"
                BackgroundColor="#4CFF4C"
                StyleClass="save-button"
                Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>